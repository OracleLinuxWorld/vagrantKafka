###
### role_kafka_schema_registry
###

# /etc/schema-registry/schema-registry.properties
# The name of the topic to store schemas in
schema_registry_kafkastore_topic: "_schemas"

kafka_kafkastore_bootstrap_servers: "{% for node in groups['kafka_brokers'] %}PLAINTEXT://{{ node }}:{{port_kafka_broker}}{% if not loop.last %},{% endif %}{% endfor%}"

# /etc/schema-registry/connect-avro-distributed.properties.j2
# &
# /etc/schema-registry/connect-avro-standalone.properties.j2
kafka_avro_bootstrap_servers: "{% for node in groups['kafka_brokers'] %}{{ node }}:{{port_kafka_broker}}{% if not loop.last %},{% endif %}{% endfor%}"

###
### role_kafka_rest_proxy
###

# /etc/kafka-rest/kafka-rest.properties
#
kafka_rest_id: "kafka-rest-test-server"
kafka_rest_schema_registry_url: "http://{{ kafka_service_ip_address }}:8081"

# kafka_rest_zookeeper_connect: "{{ kafka_service_ip_address }}:2181"
kafka_rest_zookeeper_connect: "{% for zknode in groups['kafka_brokers'] %}{{ zknode }}:{{port_zookeeper}}{% if not loop.last %},{% endif %}{% endfor%}"

kafka_rest_bootstrap_servers: "{% for bsnode in groups['kafka_brokers'] %}PLAINTEXT://{{ bsnode }}:{{port_kafka_broker}}{% if not loop.last %},{% endif %}{% endfor%}"

kafka_rest_listeners: http://0.0.0.0:{{port_kafka_rest_proxy}}


