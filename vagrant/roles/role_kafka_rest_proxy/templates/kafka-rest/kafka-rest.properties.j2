# Docs regarding configs: https://docs.confluent.io/current/kafka-rest/docs/config.html

id={{ kafka_rest_id }}
schema.registry.url={{ kafka_rest_schema_registry_url }}

# List of Zookeeper instances (Zookeeper ensemble on Kafka brokers)
zookeeper.connect={{ kafka_rest_zookeeper_connect }}

# List of Kafka broker bootstrap servers
bootstrap.servers={{ kafka_rest_bootstrap_servers }}

# Listener config
listeners: {{ kafka_rest_listeners }}

#
# Configure interceptor classes for sending consumer and producer metrics to Confluent Control Center
# Make sure that monitoring-interceptors-<version>.jar is on the Java class path
#consumer.interceptor.classes=io.confluent.monitoring.clients.interceptor.MonitoringConsumerInterceptor
#producer.interceptor.classes=io.confluent.monitoring.clients.interceptor.MonitoringProducerInterceptor
