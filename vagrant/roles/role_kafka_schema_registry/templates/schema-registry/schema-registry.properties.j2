security.protocol={{ kafka_schemaregistry_security_protocol }}

# The address the socket server listens on.
#   FORMAT:
#     listeners = listener_name://host_name:port
#   EXAMPLE:
#     listeners = PLAINTEXT://your.host.name:9092
listeners=http://0.0.0.0:8081

kafkastore.bootstrap.servers={{ kafka_bootstrap_servers }}

# The name of the topic to store schemas in
kafkastore.topic={{ schema_registry_kafkastore_topic }}

# If true, API requests that fail will include extra debugging information, including stack traces
debug=false

# setting host.name explicitly; left to auto-decide seemingly random public IPs show up in debug info
host.name={{ kafka_service_ip_address }}
